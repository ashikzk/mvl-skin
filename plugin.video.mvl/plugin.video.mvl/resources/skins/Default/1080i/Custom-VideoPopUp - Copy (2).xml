<window type="buttonmenu" id="1234">
	<defaultcontrol always="true">9001</defaultcontrol>
	<coordinates>
	<system>1</system>
	<posx>0</posx>
	<posy>0</posy>
	</coordinates>
	<onload condition="!IntegerGreaterThan(Container(9009).NumItems,0)">close</onload>
	<controls>

		<control type="group" description="MENU">
			<animation type="WindowOpen">
				<effect type="zoom" start="95" end="100" center="960,540" time="200" />
				<effect type="fade" start="80" end="100" time="200" />
			</animation>
			<animation type="WindowClose">
				<effect type="zoom" start="100" end="95" center="960,540" time="100" />
				<effect type="fade" start="100" end="0" time="100" />
			</animation>
			<control type="image" description="Menu BG">
				<posx>699</posx>
				<posy>300</posy>
				<height>350</height>
				<width>600</width>
				<texture border="0,40,0,40">dialogs/ContextMenu.png</texture>
			</control>
			<control type="list" id="9009" description="PW Options">
				<posx>699</posx>
				<posy>384</posy>
				<width>600</width>
				<height>350</height>
				<onleft>close</onleft>
				<onright>close</onright>
				<onup>9009</onup>
				<ondown>9009</ondown>
				<scrolltime tween="sine" easing="inout">280</scrolltime>
				<itemlayout height="60" width="600">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>600</width>
						<height>60</height>
						<texture border="3">buttons/ButtonNF.png</texture>
					</control>
					<control type="label">
						<posx>50</posx>
						<posy>0</posy>
						<width>500</width>
						<height>60</height>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout height="60" width="600">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>600</width>
						<height>60</height>
						<texture border="3">buttons/ButtonNF.png</texture>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>600</width>
						<height>60</height>
						<texture>dialogs/ContextFO.png</texture>
					</control>
					<control type="label">
						<posx>50</posx>
						<posy>0</posy>
						<width>500</width>
						<height>60</height>
						<textcolor>Orange</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</focusedlayout>

				<content>
					<item id="11" description="WatchTrailer">
						<visible>true</visible>
						<onclick>dialog.close(all,true)</onclick>
						<onclick></onclick>
						<label>Watch Official Trailer</label>
					</item>
					<item id="12" description="ViewUrl">
						<visible>true</visible>
						<onclick>dialog.close(all,true)</onclick>
						<onclick></onclick>
						<label>View Complete URL</label>
					</item>
					<item id="14" description="PlayItem">
						<visible>true</visible>
						<onclick>dialog.close(all,true)</onclick>
						<onclick></onclick>
						<label>Play Item</label>
					</item>
				</content>

			</control>
		</control>


      <control type="grouplist" id="9001" description="Right side">
        <posx>699</posx>
        <posy>300</posy>
        <width>387</width>
        <height>780</height>
        <itemgap>0</itemgap>
        <onup>9001</onup>
        <ondown>9001</ondown>
        <onleft>2</onleft>
        <onright>9</onright>
        <orientation>vertical</orientation>
        <control type="button" id="10" description="OK">
          <label>$LOCALIZE[186]</label>
          <width>324</width>
          <textoffsetx>10</textoffsetx>
        </control>
        <control type="button" id="11" description="cancel">
          <label>$LOCALIZE[222]</label>
          <width>324</width>
          <textoffsetx>10</textoffsetx>
        </control>
        <control type="button" id="12" description="defaults">
          <label>$LOCALIZE[409]</label>
          <width>324</width>
          <textoffsetx>10</textoffsetx>
        </control>
      </control>

	</controls>
</window>